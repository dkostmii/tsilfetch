структура СистемнаІнформація {
    назва_системи: комірка<п8>;
    назва_вузла: комірка<п8>;
    збірка_ядра: комірка<п8>;
    версія: комірка<п8>;
    архітектура: комірка<п8>;
};

зовнішня дія отримати_системну_інформацію(назва_системи: комірка<СистемнаІнформація>, розмір_буферу: ціле): ціле;
зовнішня дія друк_сі(формат: комірка<п8>, значення: комірка<п8>);


дія старт() {
    друк_сі(сі"********%%%%%%%%%%%%%%%%\n", сі"\0");
    друк_сі(сі"********%%%%%%%%%%%%%%%%\n", сі"\0");
    друк_сі(сі"********%%%%%%%%%%%%%%%%\n", сі"\0");
    друк_сі(сі"********%%%%%%%%%%%%%%%%\n", сі"\0");
    друк_сі(сі"........========\n", сі"\0");
    друк_сі(сі"        --------\n", сі"\0");
    друк_сі(сі"       .-=------\n", сі"\0");
    друк_сі(сі"       .--------\n", сі"\0");
    друк_сі(сі"\n", сі"\0");

    ціль назва_системи: п8[150];
    ціль назва_вузла: п8[150];
    ціль збірка_ядра: п8[150];
    ціль версія: п8[150];
    ціль архітектура: п8[150];

    ціль сис_інф: СистемнаІнформація = СистемнаІнформація {
        назва_системи = комірка(назва_системи[0]),
        назва_вузла = комірка(назва_вузла[0]),
        збірка_ядра = комірка(збірка_ядра[0]),
        версія = комірка(версія[0]),
        архітектура = комірка(архітектура[0])
    };

    отримати_системну_інформацію(комірка(сис_інф), 150);

    друк_сі(сі"Назва системи: %s\n", комірка(сис_інф.назва_системи[0]));
    друк_сі(сі"Назва вузла: %s\n", комірка(сис_інф.назва_вузла[0]));
    друк_сі(сі"Збірка ядра: %s\n", комірка(сис_інф.збірка_ядра[0]));
    друк_сі(сі"Версія: %s\n", комірка(сис_інф.версія[0]));
    друк_сі(сі"Архітектура: %s\n", комірка(сис_інф.архітектура[0]));
}